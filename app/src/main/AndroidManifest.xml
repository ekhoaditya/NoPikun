<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nopikun">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SettingActivity"
            android:label="Settings"
            android:parentActivityName=".Activity.MainActivity"
            android:configChanges="uiMode">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nopikun.Activity.MainActivity"
                />
        </activity>
        <activity android:name=".Activity.PasswordInfoActivity"     android:configChanges="uiMode" />
        <activity android:name=".Activity.PasswordActivity"         android:configChanges="uiMode"/>
        <activity android:name=".Activity.EnterPasswordActivity"    android:configChanges="uiMode" />
        <activity android:name=".Activity.CreatePasswordActivity"   android:configChanges="uiMode"/>
        <activity android:name=".Activity.SplashActivity"           android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity"             android:configChanges="uiMode"/>
    </application>

</manifest>